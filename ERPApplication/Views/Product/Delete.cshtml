@model ERPApplication.Models.Product
@{
    ViewBag.Title = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Product</h2>
<h3>Are you sure you want to delete this?</h3>

<div>
    <ul>
        <li>
            Product Name: @Model.ProductName
        </li>
        <li>
            Unit Price: @Model.UnitPrice
        </li>
        <li>
            Package: @Model.Package
        </li>
        <li>
            Is Discontinued: @(Model.IsDiscontinued ? "Yes" : "No")
        </li>
    </ul>
    <h4>Product supplied by @Model.Suppliers.CompanyName</h4>
    @using (Html.BeginForm())
    {
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> | @Html.ActionLink("Back to list", "Index")
        </div>
    }
</div>

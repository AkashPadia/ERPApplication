@model IEnumerable<ERPApplication.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>
@Html.ActionLink("Create New", "New")

@if (!Model.Any())
{
    <p>We don't have any products yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Unit Price
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @product.ProductName
                    </td>
                    <td>
                        @product.UnitPrice
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = product.ProductId }, null) |
                        @Html.ActionLink("Details", "Details", new { id = product.ProductId }, null) |
                        @Html.ActionLink("Delete", "Delete", new { id = product.ProductId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

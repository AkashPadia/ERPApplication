@model IEnumerable<ERPApplication.Models.Order>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders</h2>

@Html.ActionLink("Create New", "New")
@if (!Model.Any())
{
    <p>We don't have any orders yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Order Date
                </th>
                <th>
                    Order Number
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        @order.OrderDate.Value.ToLongDateString()
                    </td>
                    <td>
                        @order.OrderNumber
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = order.OrderId }, null) |
                        @Html.ActionLink("Details", "Details", new { id = order.OrderId }, null) |
                        @Html.ActionLink("Delete", "Delete", new { id = order.OrderId }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@model ERPApplication.Models.Order
@{
    ViewBag.Title = "Delete Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Order</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <ul>
        <li>
            Order Date: @Model.OrderDate.Value.ToLongDateString()
        </li>
        <li>
            Order Number: @Model.OrderNumber
        </li>
        <li>
            Total Amount: @Model.TotalAmount
        </li>
    </ul>
    @using (Html.BeginForm())
    {
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> | @Html.ActionLink("Back to list", "Index")
        </div>
    }
</div>

